{
  "info": {
    "name": "FastAPI JWT Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "b7a2b4a0-1234-4ef8-9a0a-111122223333"
  },
  "item": [
    {
      "name": "Register user",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"alice\",\n  \"password\": \"S3curePass!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/users",
          "host": ["{{baseUrl}}"],
          "path": ["users"]
        }
      }
    },
    {
      "name": "Get token",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/x-www-form-urlencoded" }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "username", "value": "alice", "type": "text" },
            { "key": "password", "value": "S3curePass!", "type": "text" }
          ]
        },
        "url": {
          "raw": "{{baseUrl}}/token",
          "host": ["{{baseUrl}}"],
          "path": ["token"]
        }
      }
    },
    {
      "name": "Me (protected)",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "exec": [
              "if (!pm.environment.get('access_token')) {",
              "  console.warn('Run Get token first and set access_token env var.');",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{access_token}}" }
        ],
        "url": {
          "raw": "{{baseUrl}}/me",
          "host": ["{{baseUrl}}"],
          "path": ["me"]
        }
      }
    }
  ],
  "event": [],
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8000" },
    { "key": "access_token", "value": "" }
  ]
}

